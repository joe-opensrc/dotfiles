
# function to source other stuff
function source_file_if_exists(){

  if [[ -r "${1}" ]]
  then
    source "${1}"
  fi

}


function assert_is_sourced(){

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]
then
  echo -ne "\nASSERT_FAIL(\"File Should Only Be Sourced.\")\n\n" >&2
  return 9
else
  return 0
fi

}

